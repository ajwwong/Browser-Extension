{
  "manifest_version": 2,
  "name": "Background Color Changer",
  "version": "1.0",
  "description": "Changes the background color of web pages",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "background": {
    "scripts": ["src/background.ts"],
    "persistent": false
  }
}